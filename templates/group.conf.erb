group <%= @name -%> {
<% if @permissions -%>
        perm {
                task {
                        uid = <%= @permissions['task_user'] -%>;
                        gid = <%= @permissions['task_group'] -%>;
                }
                admin {
                        uid = <%= @permissions['admin_user'] -%>;
                        gid = <%= @permissions['admin_group'] -%>;
                }
        }
<% end -%>
<% @controllers.each_pair do |controller, parameters| -%>
        <%= controller %> {
        <% parameters.each_pair do |key, value| -%>
        <%= key %> = <%= value %>;
        <% end %>}
<% end -%>
}
