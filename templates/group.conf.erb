group <%= @name -%> {
<% if @permissions -%>
        perm {
                task {
                        uid = <%= @permissions['task_user'] -%>;
                        gid = <%= @permissions['task_group'] -%>;
                }
                admin {
                        uid = <%= @permissions['admin_user'] -%>;
                        gid = <%= @permissions['admin_group'] -%>;
                }
        }
<% end -%>
<% @controllers.keys.sort.each do |controller| -%>
        <%= controller %> {
        <% @controllers[controller].keys.sort.each do |key| -%>
        <%= key %> = "<%= @controllers[controller][key] %>";
        <% end %>}
<% end -%>
}
